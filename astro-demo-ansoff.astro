const pageTitle = "ANSOFF Matrix Tool — Growth Strategy for Creators";
const pageDescription = "Free interactive ANSOFF Matrix tool to plan your growth strategy. Map market penetration, development, product development, and diversification options.";

// SEO metadata
const seo = {
